<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/navigate_to_secondary_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Trece mai departe"/>

    <EditText
        android:id="@+id/left_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:saveEnabled="false"
        android:enabled="false"
        android:inputType="number"
        android:hint="0"
        android:ems="6"
        android:gravity="center"
        android:layout_alignBaseline="@+id/right_edit_text"
        android:layout_alignBottom="@+id/right_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <EditText
        android:id="@+id/right_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:saveEnabled="false"
        android:enabled="false"
        android:inputType="number"
        android:ems="6"
        android:hint="0"
        android:gravity="center"
        android:layout_below="@+id/navigate_to_secondary_activity_button"
        android:layout_alignLeft="@+id/navigate_to_secondary_activity_button"
        android:layout_alignStart="@+id/navigate_to_secondary_activity_button" />

    <Button
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APASA"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/left_edit_text"
        android:layout_alignLeft="@+id/left_edit_text"
        android:layout_alignStart="@+id/left_edit_text" />

    <Button
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/right_edit_text"
        android:layout_alignRight="@id/right_edit_text"
        android:layout_below="@id/right_edit_text"
        android:text="APASA2" />

    <Button
        android:id="@+id/sterge_St"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/left_button"
        android:layout_alignStart="@+id/left_button"
        android:layout_below="@+id/left_button"
        android:layout_marginTop="28dp"
        android:text="Sterge" />

    <Button
        android:id="@+id/sterge_Dr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/right_button"
        android:layout_alignStart="@+id/right_button"
        android:layout_alignTop="@+id/sterge_St"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:text="sterge" />

</RelativeLayout>